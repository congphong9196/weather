<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/imgThoiTiet"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/load" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txtGio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="19:00"
                    android:textColor="#FFD7AC"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03/04"
                    android:textColor="#FFD7AC"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/txtNhietDo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" 21ºC"
            android:textColor="#FFD7AC"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/txtDoAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Độ ẩm: 98%"
                android:textColor="#FFD7AC"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtThoiTiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trời mưa"
                android:textColor="#FFD7AC"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtTongQuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mưa nhỏ"
                android:textColor="#FFD7AC"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>